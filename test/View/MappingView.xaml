<UserControl x:Class="test.View.MappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <!--滑块Thumb-->
            <Style x:Key="sliderThumbStyle" TargetType="{x:Type Thumb}">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Width" Value="15"/>
                <Setter Property="Height" Value="15"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border BorderBrush="CornflowerBlue"  BorderThickness="1">
                                <Rectangle Width="15" Height="15" Fill="CornflowerBlue"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--滑轨RepeatBotton-->
            <Style x:Key="sliderDecreaseRepeatButton" TargetType="RepeatButton">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border Width="180" Height="4" BorderThickness="1" BorderBrush="Black" Background="CornflowerBlue" SnapsToDevicePixels="True"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="sliderIncreaseRepeatButton" TargetType="RepeatButton">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Focusable" Value="False"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border Width="180" Height="2" BorderThickness="1" BorderBrush="Black" Background="Black" SnapsToDevicePixels="True"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--滑轨 滑块组合-->
            <Style x:Key="sliderTrack" TargetType="Slider">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Slider}">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource sliderDecreaseRepeatButton}"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource sliderIncreaseRepeatButton}"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Focusable="False" Style="{StaticResource sliderThumbStyle}" VerticalAlignment="Top"/>
                                    </Track.Thumb>
                                </Track>

                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Content="图例" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="8"/>
            <Slider Grid.Row="0" Grid.Column="2" Style="{DynamicResource sliderTrack}" TickFrequency="10" Maximum="100" Minimum="0" VerticalAlignment="Center" Margin="5"/>
            <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding MapChangeList}" SelectedValue="{Binding mcItem}" DisplayMemberPath="Glass" Width="120" Height="35"/>
            <CheckBox Content="显示路径" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="选项" Click="OptionBtn_Click" Grid.Row="0" Grid.Column="5" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <Button Content="筛选"  Grid.Row="1" Grid.Column="5" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <Button Content="演示" Grid.Row="2" Grid.Column="5" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50*"/>

            </Grid.ColumnDefinitions>
            <TextBlock Text="Column" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="270"/>
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="Row" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ScrollViewer Grid.Row="0" Grid.Column="2"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="6">
                <TextBox Text="000" Margin="20" FontSize="20"/>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">

        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">

        </Grid>
    </Grid>
</UserControl>
