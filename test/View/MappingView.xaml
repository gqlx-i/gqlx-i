                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="restoreButton" Grid.Row="1" Grid.Column="1" />
                    <ScrollBar x:Name="verScrollBar"/>
                    <ScrollBar x:Name="horScrollBar"/>
                </Grid>
            </ControlTemplate>
