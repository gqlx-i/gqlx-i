    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="ExampleCheckBox" Content="图例" Grid.Row="0" Grid.Column="0" IsChecked="{Binding ExampleIsChecked}" VerticalAlignment="Center" Margin="8"/>
            <con:PopupEx Width="300" Height="150" x:Name="pop1" Topmost="False" IsOpen="{Binding ExampleIsChecked}" StaysOpen="True"  PopupAnimation="Slide" AllowsTransparency="False"
                           PlacementTarget="{Binding  ElementName=ExampleCheckBox}" Placement="Bottom">
                <Border BorderThickness="1" BorderBrush="Black" Background="LightGray">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0.5" Background="LightGray" Margin="6,2"/>
                        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0.5" Background="LightGray" Margin="6,2"/>
                        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="0.5" Background="LightGray" Margin="6,2"/>
                    </Grid>
                </Border>
            </con:PopupEx>
            <Border Grid.Row="0" Grid.Column="2" Height="28" Background="LightGray">
                <Slider Grid.Row="0" Grid.Column="2"  IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="10" Maximum="100" Minimum="0" VerticalAlignment="Center"/>
            </Border>
            <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding MapChangeList}" SelectedItem="{Binding mcItem}" DisplayMemberPath="TypeName"  Width="160" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Right"/>
            <CheckBox Content="显示路径" IsChecked="{Binding PathIsChecked}" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="选项" Command="{Binding OptionWindowShowCommand}" Grid.Row="0" Grid.Column="5" Width="85" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,8,2"/>
            <Button Content="筛选" Command="{Binding SelectWindowShowCommand}" Grid.Row="1" Grid.Column="5" Width="85" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,8,2"/>
            <Button Content="演示" Grid.Row="2" Grid.Column="5" Width="85" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,8,2"/>
            <TextBlock Text="/////路径/////" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2" Visibility="{Binding PathIsChecked,Converter={StaticResource Bool2IsVisible}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Width="260" Height="40"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
